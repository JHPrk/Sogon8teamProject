<a href="#" onClick="javascript:page_move('/assignment/upload', '<%=academic%>', '<%=title%>');" class="butt new">추가</a>


<form accept-charset="UTF-8" role="form" method="post" action="/grade/homework/put">
<select value="subject" id = "assignment" name ="assignmentno" class="lecture" onchange="update_assignment('/grade/homework')">
	<% assignments_names.forEach(function(val){ %>
		<option value="<%=val[0]%>" <% if (val[0] == selected) { %> selected <% } %>><%=val[1]%></option>
	<% }) %>
</select>
<input type="submit" class="butt send" value="등록" >
<table class="table">
	<thead>
	<tr>
		<th>학과</th>
		<th>학번</th> <th>이름</th>
		<th>학년</th> <th>제출 여부</th><th>평가 점수</th>
	</tr>
	</thead>
	<tbody>
		<% assignments.forEach(function(val){ %>
		<tr>
    		<td><%=val[0]%></td> <td><%=val[1]%></td> <td><%=val[2]%></td>
			<td><%=val[3]%></td> <td><%=val[4]%></td> 
			<td><input type="text" id="1_hw" name="<%=val[1]%>" placeholder="<%=val[5]%>" minlength="1" maxlength="3" size="5" <% if (val[4] == '미제출') { %> disabled <% } %>></td> 
		</tr>
		<% }) %>
		<input type="hidden" name="academic" value = "<%=academic%>" >
		<input type="hidden" name="name" value = "<%=title%>" >
	</tbody>
</table>
</form>